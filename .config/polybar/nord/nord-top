[module/weather]
type = custom/script
interval = 60

;format-background = ${colors.background-alt}
format = <label>
format-prefix = "    "
format-suffix = "   "
format-prefix-foreground = ${colors.foreground}
exec = python ~/.config/polybar/weather.py

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python /usr/share/polybar/scripts/spotify_status.py -f ' {artist}: {song}'
format-underline = #ff0000

[module/powermenu]
